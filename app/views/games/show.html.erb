<div class="page-header">
<h1><%= @game.name %></h1>
</div>
<div class="panel panel-default">
  <div class="panel-body">
   <%= @game.description %>
  </div>
</div>

<table class="table table-hover">
<thead>
    <tr>
    
    <th>Typ gry</th>
    <th>Minimalna liczba graczy</th>
    <th>Maksymalna liczba graczy</th>
    <th>Minimalny wiek graczy</th>
    <th>Średnia ocena</th>
    <% if user_signed_in? %>
        <th><%= "Oceń grę" %></th>
        <th><%= "Dodaj recenzję" %></th>
        <% end %>

    </tr>
  </thead>

   
      <tr>
       
        <td><%= @game.genre %></td>
        <td><%= @game.minplayer %></td>
        <td><%= @game.maxplayer %></td>
        <td><%= @game.minage %></td>
        <td><%= @game.ratings.average(:points) %></td> 
        <% if user_signed_in? %>
        <td><%= simple_form_for(@review) do |f| %>
        <%= f.input :points, label: false, collection: 1..10 %>
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <%= f.hidden_field :game_id, :value => @game.id %>
       <span> <%= f.submit "oceń "%> </span>
        <% end %></td>
        <td><%= "tu będzie dodawanie recenzji" %></td>
        <% end %> 
      </tr>
      </tr>
    
</table>


   
      
      <% @game.ratings.each do |rating| %>
      
      <%if rating.review%>
      <div class="panel panel-default">
  <div class="panel-body">
    <%= rating.review %>
  </div>
  <div class="panel-footer">Użytkownik: <%= User.find(rating.user_id).username %></div>
</div> 
      
        <% end %>
        <% end %>

<div><h2>Dodaj własną recenzję </h2></div>
<%= render "ratings/form"%>