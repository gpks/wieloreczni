<table class="table table-hover">
   <thead>
    <tr>
    <th>Nazwa gry</th>
    <th>Typ gry</th>
    <th>Minimalna liczba graczy</th>
    <th>Maksymalna liczba graczy</th>
    <th>Minimalny wiek graczy</th>
    <th>Średnia ocena</th>
    <% if user_signed_in? %>
        <th><%= "Oceń grę" %></th>
        <th><%= "Dodaj recenzję" %></th>
        <% end %>

    </tr>
  </thead>

   <% @games.each do |game| %>
      <tr>
         <td><%= game.name %></td>
        <td><%= game.genre %></td>
        <td><%= game.minplayer %></td>
        <td><%= game.maxplayer %></td>
        <td><%= game.minage %></td>
        <td><%= game.ratings.average(:points) %></td> 
        <% if user_signed_in? %>
        <td><%= simple_form_for(@review) do |f| %>
        <%= f.input :points, label: false, placeholder: "ocena", collection: 1..10 %>
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <%= f.hidden_field :game_id, :value => game.id %>
       <span> <%= f.submit "oceń "%> </span>
        <% end %></td>
        <td><%= "tu będzie dodawanie recenzji" %></td>
        <% end %> 
      </tr>
    <% end %>
</table>